<div class="form-row">
  <div class="form-item">
    <label for="first-name">First Name:</label>
    <input
      type="text"
      id="first-name"
      name="first-name"
      pattern="[A-Za-z ]+"
      maxlength="100"
      minlength="2"
      title="Only letters and spaces are allowed"
      required
    />
  </div>
  <div class="form-item">
    <label for="last-name">Last Name:</label>
    <input
      type="text"
      id="last-name"
      name="last-name"
      pattern="[A-Za-z ]+"
      maxlength="100"
      minlength="2"
      title="Only letters and spaces are allowed"
      required
    />
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" maxlength="255" required />
    <p id="email-message"></p>
  </div>
  <div class="form-item">
    <label for="phone">Phone Number:</label>
    <input
      type="text"
      id="phone"
      name="phone"
      pattern="[0-9]+"
      maxlength="100"
      minlength="2"
      required
    />
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="country">Country:</label>
    <select id="country" name="country">
      <option value="US">United States</option>
      <option value="CA">Canada</option>
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="address"> Province/State:</label>
    <input type="text" id="state" name="state" required />
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="address"> City:</label>
    <input type="text" id="city" name="city" required />
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required />
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="zip_code">ZIP / Postal Code:</label>
    <input
      type="text"
      id="zip"
      name="zip"
      pattern="^\d{5}(?:-\d{4})?$|^[A-Za-z]\d[A-Za-z] \d[A-Za-z]\d$"
      title="Enter a valid U.S. or Canadian ZIP code"
      required
    />
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="delivery">Delivery Method:</label>
    <select id="delivery" name="delivery">
      <option value="shipping">Shipping (Canada Post with Tracking)</option>
      <option value="pickup">
        Pickup at store (102-9143 Saturna Dr. Burnaby B.C.)
      </option>
    </select>
  </div>
</div>
