<h2>Register</h2>
<%- include('../partials/errorMessage.ejs') %>
<div class="log-form">
  <form action="/account" method="POST">
    <div class="form-row">
      <div class="form-item">
        <label for="username">Username:</label>
        <input
          type="text"
          id="username"
          name="username"
          pattern="[A-Za-z0-9_]+"
          maxlength="50"
          minlength="2"
          title="Only letters, numbers, and underscore are allowed"
          required
        />
        <p id="username-message"></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-item">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" maxlength="255" required />
        <p id="email-message"></p>
      </div>
    </div>
    <br />
    <div class="form-row">
      <div class="form-item">
        <label for="password">Password:</label>
        <input
          type="password"
          id="password"
          maxlength="50"
          name="password"
          required
        />
      </div>
    </div>
    <input type="submit" class="index-btn" value="Register" />
  </form>
</div>

<script src="/scripts/register.js"></script>
